{
    "seed": 442,
    "data": {
        "preprocess": {
            "filter_special_chars": true,
            "remap_contraction": true,
            "remap_abbreviation": true
        },
        "path": {
            "train": "data/processed/bert/train.csv",
            "test": "data/processed/bert/test.csv",
            "vocab": "data/processed/bert/vocab.txt"
        }
    },
    "model": {
        "type": "bert",
        "pretrained_bert_model": "bert-base-uncased",
        "max_length": 80,
        "num_branchs": 1
    },
    "trainer": {
        "num_epochs": 20,
        "batch_size": 64,
        "loss_fn": "focal",
        "optimizer": {
            "type": "adam",
            "learning_rate": 1e-5
        },
        "display_step": 100,
        "save_step": 1000
    }
}